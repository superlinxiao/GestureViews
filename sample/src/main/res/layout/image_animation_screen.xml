<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/App.ImageText"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="@string/expand_image" />

    <TextView
        style="@style/App.ImageText"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="@string/expand_image" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/single_image"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/painting_03" />

        <ImageView
            android:id="@+id/single_image2"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/painting_03" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/single_image_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/window_background"
        android:visibility="visible" />

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/single_image_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>
